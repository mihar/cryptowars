<%= form_for @index do |f| %>

  <div class="name-asset">
    <%= f.text_field :name, placeholder: 'Name your index...', autocomplete: "off", spellcheck: "false" %>
  </div>
  <div class="dank__wrapper">

  <div class="wrappah">
    <h2 class="section-title" style="position:relative;">Selected Assets<label style="position:absolute;right:0px;font-size:16px;font-weight:normal;margin-top:8px;">Weight</label></h2>
    <div class="picked_assets">
    </div>
    <div class="input__wrapper">
      <button type="button" name="button" id="lucky" style="display:flex;justify-content:center;align-items:center;font-weight:bold">ðŸŽ² I'm feeling lucky ðŸŽ²</button>
      <%= f.submit 'ðŸ’° Create index ðŸ’°', id: 'create_index' %>
    </div>
  </div>

  <div class="danktable__wrapper">
    <h2 class="section-title" style="margin-bottom:10px;">Asset List</h2>
    <div style="height: 60vh;overflow-y:scroll;">
    <table class="assets">
      <thead>
        <tr class="assets__legend">
          <td>#</td>
          <td>Name</td>
          <td>Market Cap</td>
          <td>Price</td>
        </tr>
      </thead>
      <tbody>
        <% @assets.each_with_index do |asset, idx| %>
          <tr class="asset" data-id="<%= asset.id %>" data-code="<%= asset.code %>" data-name="<%= asset.name %>">
            <td><%= idx + 1 %></td>
            <td><%= asset.name %></td>
            <td>
              <% if asset.market_cap? %>
                <%= number_to_currency asset.market_cap, precision: 0 %>
              <% else %>
                N/A
              <% end %>
            </td>
            <td><%= number_to_currency asset.price, precision: 6 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    </div>
  </div>

<% end %>
