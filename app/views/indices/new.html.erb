<%= form_for @index do |f| %>

<p>
  <label>Name your index</label>
  <%= f.text_field :name %>
</p>

<table class="assets">
  <tbody>
    <!-- Legend -->
    <tr class="assets__legend">
      <td>#</td>
      <td>Name</td>
      <td>Market Cap</td>
      <td>Price</td>
      <td>Selected</td>
    </tr>
    <% @assets.limit(15).each_with_index do |asset, idx| %>
      <% value = asset.values.last %>

      <!-- Asset -->
      <tr class="asset">
        <td><%= idx + 1 %></td>
        <td><%= asset.name %></td>
        <td><%= value.market_cap_usd %></td>
        <td><%= value.price_usd %></td>
        <td><%= check_box_tag 'index[codes][]', asset.code %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= f.submit %>
<% end %>
